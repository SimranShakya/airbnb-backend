<%- include('partials/head') %>
  </head>

  <body class="bg-gray-100 min-h-screen">
    <%- include('partials/nav') %>

      <main class="container mx-auto max-w-2xl mt-12 px-6">
        <div class="bg-white shadow-xl rounded-2xl p-10">
          <h1 class="text-3xl font-bold text-red-600 mb-6 text-center">Register Your Home</h1>

          <form action="/host//add-home" method="POST" class="space-y-6">

            <!-- House Name -->
            <div>
              <label for="houseName" class="block text-gray-700 font-medium mb-2">House Name</label>
              <input type="text" id="houseName" name="houseName" placeholder="e.g., Cozy Riverside Cottage"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 shadow-sm placeholder-gray-400 text-gray-800" />
            </div>

            <!-- Price Per Day -->
            <div>
              <label for="pricePerDay" class="block text-gray-700 font-medium mb-2">Price per Day</label>
              <input type="text" id="pricePerDay" name="pricePerDay" placeholder="Enter price per Day"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 shadow-sm placeholder-gray-400 text-gray-800" />
            </div>

            <!-- Location -->
            <div>
              <label for="paddLocation" class="block text-gray-700 font-medium mb-2">Location</label>
              <input type="text" id="paddLocation" name="paddLocation" placeholder="Enter location of the home"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 shadow-sm placeholder-gray-400 text-gray-800" />
            </div>

            <!-- Photo URL -->
            <div>
              <label for="photoOfHouse" class="block text-gray-700 font-medium mb-2">Photo URL</label>
              <input type="text" id="photoOfHouse" name="photoOfHouse" placeholder="Enter URL of the photo"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 shadow-sm placeholder-gray-400 text-gray-800" />
            </div>

            <!-- Rating -->
            <div>
              <label for="ratingOfHouse" class="block text-gray-700 font-medium mb-2">Rating</label>
              <input type="text" id="ratingOfHouse" name="ratingOfHouse" placeholder="Rate the house"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 shadow-sm placeholder-gray-400 text-gray-800" />
            </div>

            <!-- Submit Button -->
            <div class="text-center">
              <input type="submit" value="Register Home"
                class="bg-red-600 hover:bg-red-700 text-white font-semibold py-3 px-8 rounded-full cursor-pointer transition duration-300 transform hover:scale-105 focus:outline-none focus:ring-4 focus:ring-red-300 focus:ring-offset-2 shadow-md text-lg" />
            </div>

          </form>
        </div>
      </main>
  </body>

  </html>